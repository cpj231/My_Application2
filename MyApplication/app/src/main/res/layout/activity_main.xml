<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Start" />

        <Button
            android:id="@+id/start_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/start_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Start2" />


        <EditText
            android:id="@+id/input_edit_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/start_button2"
            android:layout_marginTop="-116dp"
            android:layout_marginEnd="-179dp"
            android:layout_toStartOf="@+id/start_button"
            android:hint="Input 1"
            android:inputType="number"
            android:text="1" />

        <EditText
            android:id="@+id/input_edit_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_edit_text1"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="-179dp"
            android:layout_toStartOf="@+id/start_button2"
            android:hint="Input 2"
            android:inputType="number"
            android:text="1" />

        <Button
            android:id="@+id/exit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/start_button2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Exit" />

        <CheckBox
            android:id="@+id/save_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exit_button"
            android:layout_alignStart="@+id/exit_button"
            android:layout_marginStart="-13dp"
            android:layout_marginTop="14dp"
            android:text="Save Result" />

        <EditText
            android:id="@+id/result_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/save_check_box"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@null"
            android:inputType="none"
            android:text="" />

        <EditText
            android:id="@+id/history_data"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/start_button"
            android:layout_marginTop="-5dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/start_button"
            android:ems="10"
            android:inputType="text"
            android:text="1,2,3,4,5,6 + 1" />

        <Button
            android:id="@+id/retrieval1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/history_data"
            android:layout_alignEnd="@+id/history_data"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="42dp"
            android:text="检索1"
            android:textAllCaps="true" />

        <Button
            android:id="@+id/retrieval2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/retrieval1"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="-91dp"
            android:layout_toStartOf="@+id/retrieval1"
            android:text="检索2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/retrieval2"
            android:layout_alignBottom="@+id/retrieval2"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="-73dp"
            android:focusable="true"
            android:text="随机值" />

    </RelativeLayout>
</ScrollView>
