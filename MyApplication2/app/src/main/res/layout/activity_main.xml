<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Hello World!"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/fw1Number"
        android:layout_width="33dp"
        android:layout_height="39dp"
        android:layout_marginTop="56dp"
        android:layout_marginStart="113dp"
        android:ems="10"
        android:inputType="number"
        android:layout_alignParentStart="@+id/textView4"
        android:layout_alignParentBottom="@+id/textView" />

    <EditText
        android:id="@+id/fw2Number"
        android:layout_width="32dp"
        android:layout_height="39dp"
        android:layout_marginTop="56dp"
        android:layout_marginStart="70dp"
        android:ems="10"
        android:inputType="number"
        android:layout_alignParentStart="@+id/textView3"
        android:layout_alignParentBottom="@+id/textView" />

    <EditText
        android:id="@+id/slNumber"
        android:layout_width="33dp"
        android:layout_height="39dp"
        android:layout_marginEnd="90dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:inputType="number"
        android:layout_alignEnd="@+id/sjButton" />

    <Button
        android:id="@+id/sjButton"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="26dp"
        android:backgroundTint="@color/golden"
        android:padding="0dp"
        android:text="随机"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="@+id/textView" />

    <Button
        android:id="@+id/sj1Button"
        android:layout_width="68dp"
        android:layout_height="37dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/golden"
        android:padding="0dp"
        android:text="随机1"
        android:layout_below="@+id/sjText"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        android:layout_alignParentBottom="@+id/sjText" />

    <Button
        android:id="@+id/sj2Button"
        android:layout_width="68dp"
        android:layout_height="37dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/golden"
        android:padding="0dp"
        android:text="随机2"
        android:layout_below="@+id/sjText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="@+id/sjText" />

        <TextView
            android:id="@+id/sjText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="@+id/sj1Button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:background="@null"
            android:inputType="none"
            android:text=""
            android:textIsSelectable="true" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="56dp"
        android:text="范围:"
        android:textSize="23dp"
        android:layout_alignParentStart="@+id/textView"
        app:layout_constraintHorizontal_bias="0.068"
        android:layout_alignParentBottom="@+id/textView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="18dp"
        android:layout_height="40dp"
        android:layout_marginTop="54dp"
        android:layout_marginStart="100dp"
        android:text="~"
        android:textSize="23dp"
        android:layout_alignParentStart="@+id/fw2Number"
        android:layout_alignParentBottom="@+id/textView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="119dp"
        android:layout_marginTop="56dp"
        android:text="数量:"
        android:textSize="23dp"
        android:layout_alignEnd="@+id/sjButton"
        android:layout_alignParentBottom="@+id/textView" />

    <TextView
        android:id="@+id/sj1Text"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:inputType="none"
        android:textIsSelectable="true"
        android:text=""
        android:layout_below="@+id/sj1Button"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        android:layout_alignParentBottom="@+id/sj1Button" />

    <TextView
        android:id="@+id/sj2Text"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@null"
        android:inputType="none"
        android:textIsSelectable="true"
        android:text=""
        android:layout_below="@+id/sj1Button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="@+id/sj2Button" />

    <Switch
        android:id="@+id/zjSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true"
        android:text="Switch"
        android:layout_below="@+id/sjText"
        android:layout_alignParentStart="@+id/sj2Button"
        android:layout_alignParentEnd="@+id/sj1Button"
        android:layout_alignParentBottom="@+id/sjText" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="77dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@android:color/system_surface_container_dark"
        android:text="退出"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />


    </RelativeLayout>
</ScrollView>